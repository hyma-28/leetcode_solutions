class Solution:
    def longestValidParentheses(self, s: str) -> int:
        left=0
        right=0
        mx=0
        for i in s:
            if i=='(':
                left +=1
            else:
                right+=1
            if left==right:
                mx=max(mx,left+right)
            elif right>left:
                left=0
                right=0     
        left=0
        right=0  
        for i in s[::-1]:
            if i=='(':
                left +=1
            else:
                right+=1
            if left==right:
                mx=max(mx,left+right)
            elif left>right:
                left=0
                right=0
        return mx  
